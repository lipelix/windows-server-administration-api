<h1>Login</h1>

<form id="login">
    <div class="form-group">
        <label for="usr">Name:</label>
        <input type="text" class="form-control" id="usr">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd">
    </div>
    <button type="button" class="btn btn-default" onclick="login()">Log In</button>
</form>

<script>
    function login() {
        var name = $("#usr").val();
        var pwd = $("#pwd").val();
        $(".alert").remove();

        $.ajax({
            method: "POST",
            url: "/api/token",
            dataType: "json",
            data: { grant_type:"password", username: name, password: pwd }
        }).done(function (msg) {
            console.log(msg);
            Cookies.set('access_token', msg.access_token);
            Cookies.set('logged_user', $("#usr").val());
//            $("#login").prepend('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Success!</strong> Logged as ' + $("#usr").val() + '</div>');
            window.location.href = '/Home';
        }).fail(function(msg) {
            console.log(msg);
            Cookies.remove('logged_user');
            Cookies.remove('access_token');
            $("#login").prepend('<div class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Warning!</strong> '+msg.responseJSON.error_description+'</div>');
        });
    }
</script>