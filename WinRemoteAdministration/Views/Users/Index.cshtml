<h1>Users</h1>

<table id="users" class="display" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
    </tr>
    </thead>
</table>

<script>
    $(function () {
        var table = $('#users').DataTable({
            "ajax": "/users/getUsers",
            "columns": [
                { "data": "UserName" },
                { "data": "Email" },
                { "data": "Roles" }
            ]
        });

        $('#users').on('click', 'tr', function () {
            var id = table.row( this ).id();
            $.get("/users/getUser", { id: id})
              .done(function (data) {
                    console.log(data);
            });
        });
    });
</script>